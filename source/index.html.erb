            <div class="icon">
              <p id='css'>CSS3</p>
              <%= image_tag 'css.png' %>
            </div>
            <div class="icon">
              <p id='bootstrap'>BOOTSTRAP</p>
              <%= image_tag 'bootstrap.png' %>
            </div>
          </div>
        </div>
        <div class="front-back-others">
          <h3>Back End</h3>
          <div class="icons-grid">
            <div class="icon">
              <p id='rails'>RAILS</p>
              <%= image_tag 'rails.png' %>
            </div>
            <div class="icon">
              <p id='postgre'>POSTGRESQL</p>
              <%= image_tag 'postresql.png' %>
            </div>
            <div class="icon">
              <p id='oracle'>ORACLE</p>
              <%= image_tag 'oraclesql.png' %>
            </div>
          </div>
        </div>
        <div class="front-back-others">
          <h3>DevOps</h3>
          <div class="icons-grid">
            <div class="icon">
              <p id='heroku'>HEROKU</p>
              <%= image_tag 'heroku.png' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
