            </div>
            <div class="icon">
              <%= image_tag 'html.png' %>
            </div>
            <div class="icon">
              <%= image_tag 'css.png' %>
            </div>
            <div class="icon">
              <%= image_tag 'bootstrap.png' %>
            </div>
          </div>
        </div>
        <div class="front-back-others">
          <h3>Back End</h3>
          <div class="icons-grid">
            <div class="icon">
              <%= image_tag 'rails.png' %>
            </div>
            <div class="icon">
              <%= image_tag 'postresql.png' %>
            </div>
            <div class="icon">
              <%= image_tag 'oraclesql.png' %>
            </div>
          </div>
        </div>
        <div class="front-back-others">
          <h3>DevOps</h3>
          <div class="icons-grid">
            <div class="icon">
              <%= image_tag 'heroku.png' %>
            </div>
          </div>
        </div>
      </div>
    </div>
